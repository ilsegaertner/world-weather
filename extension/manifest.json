{
  "manifest_version": 2,
  "version": "1.0",
  "name": "World Weather App",
  "description": "An extension to display global weather information.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "web_accessible_resources": ["logo.png"],
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["tabs"]
}
